[user]
	name = Xxx Xxx
	email = xxx@example.com
[core]
	excludesfile = /Users/xxx/.gitignore_global
	editor = nvim
[commit]
	template = /Users/xxx/.stCommitMsg
[alias]
	s = status
	b = branch
	co = checkout
	pr = pull --rebase

	l = log -C --decorate
	ls = log -C --stat --decorate
	lga = log --graph '--pretty=tformat:%Cblue%h%Creset %Cgreen%ar%Creset %Cblue%d%Creset %s' --all
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	slog = log --graph --all --topo-order --pretty='format:%h %ai %s%d (%an)'

	co = checkout
	b = branch
	ci = commit
	st = status
	project-summary = !which onefetch && onefetch
[help]
	autocorrect = 20
[color]
	ui = auto
[push]
	default = simple
	followTags = true
